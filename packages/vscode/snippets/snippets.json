{
  "screen": {
    "prefix": "screen",
    "body": [
      "screen ${1:ScreenName} {",
      "\tlayout {",
      "\t\t",
      "\t}",
      "}"
    ],
    "description": "Create a new screen"
  },
  "component": {
    "prefix": "component",
    "body": [
      "component ${1:ComponentName} {",
      "\tproperties {",
      "\t\t",
      "\t}",
      "\tlayout {",
      "\t\t",
      "\t}",
      "}"
    ],
    "description": "Create a new component"
  },
  "button": {
